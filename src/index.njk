layout: layouts/base.njk
title: FYI Blog en Nieuwsbrief
eleventyExcludeFromCollections: true
---

{%- for post in collections.bericht | reverse -%}
    {%- if post.data.href -%}
        <article class="in-list type-link">
            <h2 class="link-title">
                <span class="hostname">{{ post.data.href | urlHostname }}</span>
                <a href="{{ post.data.href }}" class="goto-link">{{ post.data.title }}</a>
                <a href="{{ post.url }}" class="permalink">ðŸ”—</a>
            </h2>
            <div>{{ post.templateContent | safe }}</div>
        </article>
    {% else -%}
        <article class="in-list type-article">
            <h2>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <div>{{ post.templateContent | safe }}</div>
        </article>
    {% endif -%}
</article>{%- endfor -%}

<!doctype html>
<html>
    {% include '../head.njk' %}
    {% include '../header.njk' %}
    <body>
        <main>
            {%- if href -%}
                <article class="single type-link">
                    <h1 class="link-title">
                        <span class="hostname">{{ href | urlHostname }}</span>
                        <a href="{{ href }}" class="goto-link">{{ title }}</a>
                    </h1>
                    {{ content | safe }}
                </article>
            {% else -%}
                <article class="single type-article">
                    <h1>{{ title }}</h1>
                    {{ content | safe }}
                </article>
            {% endif -%}
        </main>
        <!-- Current page: {{ page.url | url }} -->
        {% include '../footer.njk' %}
    </body>
</html>
